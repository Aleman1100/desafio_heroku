<h1>Agregar Usuario</h1>
<div class="py-4">
    <hr class="w-50" />

    <form>
    <div class="form-group row w-50 m-auto">
        <div class="form-group col-12 col-sm-6">
        <label>Username</label>
        <input id="username" class="form-control m-auto"/>
        </div>
        <div class="form-group col-12 col-sm-6">
        <label>Email</label>
        <input id="email" class="form-control m-auto"/>
        </div>
        <div class="form-group col-12 col-sm-6">
        <label>Password</label>
        <input id="password1" class="form-control m-auto"/>
        </div>
        <div class="form-group col-12 col-sm-6">
        <label>Repita la password</label>
        <input id="password2" class="form-control m-auto"/>
        </div>
    </div>
    <button class="btn btn-info mb-3" onclick="nuevoUser()" id="agregar" action="https://desafio-heroku-alejandro.herokuapp.com/user">Agregar</button>
    </form>
</div>
</body>
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script>
  let url = "https://desafio-heroku-alejandro.herokuapp.com/user";
  let username = document.getElementById("username");
  let email = document.getElementById("email");
  let password1 = document.getElementById("password1");
  let password2 = document.getElementById("password2");

  function nuevoUser() {
    username;
    email;
    password1;
    password2;
    let data = {
      username: username.value,
      email: email.value,
      password1: password1.value,
      password2: password2.value,
    };
    console.log(data);
    axios.post(url, data).then(() => {
      console.log(`Usuario ${username} creado con exito`);
    });
  }
</script>
